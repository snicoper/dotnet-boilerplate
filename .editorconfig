# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{cs,sh,ps1,md,rst}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.cs]
# https://docs.microsoft.com/es-es/visualstudio/ide/editorconfig-code-style-settings-reference
# https://docs.microsoft.com/es-es/visualstudio/ide/editorconfig-code-style-settings-reference?view=vs-2019

csharp_style_namespace_declarations = file_scoped
